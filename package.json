{
  "name": "idi-notifications",
  "version": "16.0.1",
  "description": "Windows notification application using Electron",
  "author": "IDI",
  "main": "dist/main.js",
  "scripts": {
    "start": "webpack --config webpack.config.js && electron .",
    "start:background": "electron . --background",
    "dev": "cross-env NODE_ENV=development npm run start",
    "build": "webpack --config webpack.config.js",
    "watch": "webpack --watch --config webpack.config.js",
    "clean": "rimraf dist && rimraf release",
    "full-run": "npm run clean && npm run build && npm run start",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "prod": "npm run clean && npm run build && npm run dist:win"
  },
  "dependencies": {
    "@types/jimp": "^0.2.1",
    "@types/ws": "^8.18.1",
    "bufferutil": "^4.0.9",
    "dotenv": "^16.5.0",
    "framer-motion": "^10.16.4",
    "howler": "^2.2.4",
    "jimp": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "sharp": "^0.34.1",
    "utf-8-validate": "^6.0.5",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/howler": "^2.2.12",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.0",
    "electron": "^25.0.0",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.5.0",
    "rimraf": "^5.0.0",
    "style-loader": "^3.3.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.1",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.0"
  },
  "build": {
    "appId": "com.idi.notifications",
    "productName": "IDI Notifications",
    "directories": {
      "output": "release",
      "buildResources": "src/assets"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true,
      "shortcutName": "IDI Notifications",
      "runAfterFinish": true,
      "menuCategory": true,
      "include": "build/installer.nsh",
      "installerIcon": "src/assets/icon.ico",
      "uninstallerIcon": "src/assets/icon.ico"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "src/assets/**/*"
    ],
    "extraResources": [
      {
        "from": "src/assets",
        "to": "assets"
      },
      {
        "from": "SOUND",
        "to": "SOUND"
      }
    ]
  }
}
